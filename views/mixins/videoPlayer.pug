mixin videoPlayer(video = {})

    #jsVideoPlayer
        
        .videoPlayer
            video(src=`/${video.src}`)
            .playpause
            




        .videoPlayer__controls 
            .progress
                .progress__filled


                
            .videoPlayer__column

                span#timebox
                    span#currentTime 00:00:00
                    span  /
                    span#totalTime 00:00:00
                
        .videoPlayer__column_controls

            
            span.controlBtn#jsPlayButton
                i.fas.fa-play
            span.controlBtn#jsVolumeBtn
                i.fas.fa-volume-up
            input.controlBtn.videoPlayer__volume#jsVolume(type="range",min="0", max="1", step="0.1" value="0.5")
            span.controlBtn#jsFullScreen
                i.fas.fa-expand



                

                